::-webkit-scrollbar
  size 0
  display none
  background transparent
  opacity 0

*
  &, &:before, &:after
    box-sizing border-box

html
  font-size '16px'
  user-select none
  -webkit-text-size-adjust none
  -webkit-tap-highlight-color transparent

html, body
  height 100%

body
  font-hei()
  background-color $bg-color

h1, h2, h3, h4, h5, h6
  font-weight 500
  line-height 1.1

h1, h2, h3
  margin-top 20px
  margin-bottom 20px

h4, h5, h6
  margin-top 10px
  margin-bottom 10px

h1
  font-size 36px

h2
  font-size 30px

h3
  font-size 24px

h4
  font-size 18px

h5
  font-size 14px

h6
  font-size 12px
