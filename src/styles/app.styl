@require "~normalize.css"
@require "iconfont"
@require "transition"

::-webkit-scrollbar
  size 0
  display none
  background transparent

*
  &, &:before, &:after
    box-sizing border-box

html
  font-size '16px'

html, body, #app
  height 100%

body
  font-hei()

  &.bg
    background-color $bg-color

#app
  relative()
  max-width '1024px'
  margin 0 auto
  scroll-behavior smooth
  -webkit-overflow-scrolling touch

.pull-left
  float left !important

.pull-right
  float right !important

.clearfix
  *zoom 1

  &:before, &:after
    content ''
    display table

  &:after
    clear both

.scroll
  scrollSmooth()

.scroll-x
  scrollSmooth(true)

a
  &, &:active, &:hover, &:visited
    color inherit
    text-decoration none

input
  placeholder(color $placeholder-color,)
  &,
  &::-webkit-inner-spin-button,
  &::-webkit-outer-spin-button
    appearance none

.disabled
  color $remark-color !important
  cursor not-allowed

.icon-character
  display inline-block
  line-height 1
  border-radius 5px
  padding 4px
  color $reverse-color
  scaleSize(10)
  margin-left -2px
  margin-right -2px

.remark-color
  color $remark-color

.remark-bg
  background-color $remark-color

.shadow-bottom
  box-shadow $bottom-shadow

// 1px fallback
.border
  border1px()

.border-t
  border1px-t()

.border-b
  border1px-b()

.border-tb
  border1px-tb()

.border-l
  border1px-l()

.border-r
  border1px-r()

.border-radius
  borderRadius()

.dashed-line
  border-bottom 1px dashed $border-color

  @media (min-resolution 2dppx)
    transform scaleY(.5)

.fixed-bottom
  fixed()
  bottom 0
  width 100%
  max-width 1024px
  padding 12px 16px
  background-color $back-light-color
  display flex

  .btn
    flex 1
    font-size $stress-size

    + .btn
      margin-left 10px

.mask
  fixed(top right bottom left)
  z-index 500
  background-color $stress-color
  opacity .5

  &.transparent
    opacity 0

.vertical-line
  border1px-l($border-color)
  width 1px
  margin 0 8px

.split-line
  border1px-t($border-color)
  height 2px
